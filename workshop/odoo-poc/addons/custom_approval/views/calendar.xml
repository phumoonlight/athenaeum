<odoo>
    <record id="approvals.approval_request_action_all" model="ir.actions.act_window">
        <field name="view_mode">list,form,kanban,calendar</field>
        <field name="context">{'search_default_filter_approved_requests': 1}</field>
    </record>
    <record id="approval_custom_view_calendar" model="ir.ui.view">
        <field name="name">approval_custom.view.calendar</field>
        <field name="model">approval.request</field>
        <field name="arch" type="xml">
            <calendar
                string="Approval Request X"
                date_start="date_start"
                date_stop="date_end"
                color="partner_id"
                mode="month"
            >
                <field name="name" />
            </calendar>
        </field>
    </record>
</odoo>